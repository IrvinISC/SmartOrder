<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ordenar"
    android:background="@color/gris">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="@color/grisM"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="61dp"
        android:layout_weight="1"
        android:background="@color/grisM"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <Button
            android:id="@+id/BTN_pedir_orn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shadow"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Cancelar orden"
            android:textColor="@drawable/txt_btn_uno"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>

        <Button
            android:id="@+id/BTN_cancelar_orn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shadow"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Confirmar orden"
            android:textColor="@drawable/txt_btn_uno"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grisM"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:text="Smart Order"
            android:textColor="@drawable/txt_btn_dos"
            android:textSize="25sp"
            android:textStyle="bold"
            android:shadowColor="#333333"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:padding="15dp"
            android:text="Ordenar"
            android:textColor="@android:color/transparent"
            android:textSize="20sp"
            android:theme="@style/BotonColores" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:padding="15dp"
            android:text="Ver cuenta"
            android:textColor="@android:color/transparent"
            android:textSize="20sp"
            android:theme="@style/BotonColores" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Producto"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Precio"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Editar ingredientes"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Borrar"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/LV_orden"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="61dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>