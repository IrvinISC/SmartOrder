<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".menu"
    android:background="@color/gris">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/grisM"
        android:padding="10dp">

        <Button
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Smart Order"
            android:textColor="@color/blanco"
            android:fontFamily="@font/roboto"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@android:color/transparent" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordenar"
            android:textSize="20sp"
            android:theme="@style/BotonColores"
            android:fontFamily="@font/roboto"
            android:textColor="@color/blanco"
            android:layout_marginRight="5dp"
            android:padding="15dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver cuenta"
            android:textSize="20sp"
            android:theme="@style/BotonColores"
            android:fontFamily="@font/roboto"
            android:textColor="@color/blanco"
            android:layout_marginLeft="5dp"
            android:padding="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ListView
            android:id="@+id/LV_categoria"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@color/gris"
            android:scrollbars="none"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"/>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:background="@color/grisM"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/buscar"
                android:ems="10"
                android:hint="Buscar"
                android:textSize="20sp"
                android:inputType="textPersonName"
                android:textColor="@drawable/txt_btn_uno" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>