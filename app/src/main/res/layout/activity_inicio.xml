<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio"
    android:background="@color/gris">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <Button
                android:id="@+id/TV_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/beauty"
                android:gravity="center"
                android:text="{SmartOrder}"
                android:textColor="@drawable/txt_btn_uno"
                android:textSize="@android:dimen/app_icon_size" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/icono" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_uno"
                android:fontFamily="@font/nova"
                android:onClick="iniciarSesion"
                android:padding="15dp"
                android:text="Iniciar sesiÃ³n"
                android:textColor="@drawable/txt_btn_uno"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="341dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_uno"
                android:fontFamily="@font/nova"
                android:onClick="registrarse"
                android:padding="15dp"
                android:text="Registrarse"
                android:textColor="@drawable/txt_btn_uno"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="432dp" />

            <Button
                android:id="@+id/BTN_omitir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:onClick="escoger"
                android:paddingRight="40dp"
                android:text="Omitir"
                android:textColor="@drawable/txt_btn_uno"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>